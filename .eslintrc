{
  "root": true,
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "brace-style": [
      "error",
      "1tbs"
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ]
  },
  "globals": {
    "chrome": true
  }
}
